<ui>
  <menubar name="menubar">
    <menu action="file">
      <menuitem name="new"  action="file.new"  />
      <menuitem name="open" action="file.open"  />
      <menuitem name="save" action="file.save" />
      <placeholder name="RecentFiles" />
      <separator />
      <menuitem name="save_route" action="file.save_route" />
      <separator />
      <menuitem name="quit" action="file.quit" />
    </menu>
    <menu action="config">
      <menuitem name="map_load"  action="config.map_load" />
      <menu action="refp">
        <menuitem name="set_A" action="refp.set_ref_A" />
        <menuitem name="set_H" action="refp.set_ref_H" />
        <menuitem name="set_V" action="refp.set_ref_V" />
      </menu>
      <menuitem name="route_unset" action="config.route_unset" />
    </menu>
    <menu action="view">
      <menuitem name="ref_points" action="view.ref_points" />
      <menuitem name="route"      action="view.route"      />
      <menuitem name="points"     action="view.points"     />
      <menuitem name="bg_off"     action="view.bg_off"     />
      <menuitem name="bg_dimmed"  action="view.bg_dimmed"  />
      <menuitem name="bg_on"      action="view.bg_on"  />
    </menu>
    <menu name="Help" action="help">
      <menuitem name="About" action="help.about"/>
    </menu>
  </menubar>
</ui>
